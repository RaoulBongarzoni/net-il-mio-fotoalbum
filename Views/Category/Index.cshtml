@model List<CategoryModel>


<div class="container">
    <h4 class="text-center p-4">All Categories</h4>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-primary m-3">
                    <a class="text-white" href="@Url.Action("Create","Category")">Create a new category</a>
                </button>
                <button type="button" class="btn btn-info m-3">
                    <a href="@Url.Action("Index","Photo")">Back to photos</a>
                </button>
            </div>
    <div class="row">





                @foreach (CategoryModel category in Model)
                {
                    <div class="card col-3">
                        <div class="text-center align-content-center ">@category.Name</div>
                        <div class="text-center align-content-center">
                            <form asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">
                                    Delete
                                </button>
                            </form>
                        </div>
            </div>
                }

    
    </div>
